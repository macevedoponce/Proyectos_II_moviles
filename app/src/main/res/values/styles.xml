<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_txt_btn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="style_txt_title">
        <item name="android:textColor">@color/icon_selected_two</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="style_txt_voler">
        <item name="android:textColor">@color/icon_selected</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <style name="AppTheme.TemaPopup">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextInputLayout.OutLineBox"/>


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_custom_star</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="CustomFavoriteBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_favorite_button</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>


</resources>