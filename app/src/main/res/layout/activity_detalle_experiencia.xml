<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sedes.carreras.rutaExperiencia.experiencia.DetalleExperienciaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/icon_selected"
                android:layout_gravity="center"
                android:src="@drawable/baseline_chevron_left_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_txt_voler"
                android:text="Volver"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logo_uc_25"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#AFAFAF"
        >

        <ProgressBar
            android:id="@+id/pbCantidadItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSinContenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:textColor="@color/icon_selected"
        android:text="Ningun Contenido encontrado"
        android:fontFamily="@font/poppins_semibold"
        android:visibility="gone"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContenido"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"/>

</LinearLayout>