<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sedes.carreras.rutaExperiencia.experiencia.ListExperienciasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/ivCiclo"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/ciclo_uno"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            style="@style/style_txt_title"
            android:text="Experiencias"/>
        
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExperiencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>