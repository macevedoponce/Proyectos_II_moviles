<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.solicitarInformacion.SolicitarInformacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicita Información"
            android:textSize="20dp"
            android:textColor="@color/icon_selected"
            android:layout_gravity="center">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/edtSolInfoNombres"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Nombres*"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:elevation="2dp"
                android:background="@drawable/borde_edit_text"
                >
            </EditText>

            <EditText
                android:id="@+id/edtSolInfoApellidoPaterno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Apellido Paterno*"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:elevation="2dp"
                android:background="@drawable/borde_edit_text">
            </EditText>

            <EditText
                android:id="@+id/edtSolInfoApellidoMaterno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Apellido Materno*"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:elevation="2dp"
                android:background="@drawable/borde_edit_text">
            </EditText>

            <EditText
                android:id="@+id/edtSolInfoEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email*"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:elevation="2dp"
                android:background="@drawable/borde_edit_text">
            </EditText>

            <EditText
                android:id="@+id/edtSolInfoCelular"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Celular*"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:elevation="2dp"
                android:background="@drawable/borde_edit_text">
            </EditText>

            <EditText
                android:id="@+id/edtSolInfoFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Fecha de nacimiento*"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:elevation="2dp"
                android:background="@drawable/borde_edit_text">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/borde_edit_text">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modalidad de interes"
                    android:textColor="@color/black">
                </TextView>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/RBPresencial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Presencial" />

                    <RadioButton
                        android:id="@+id/RBSemiPresencial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SemiPresencial" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A Distancia" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/borde_edit_text"
                android:layout_gravity="right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Método de contacto"
                    android:textColor="@color/black">
                </TextView>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <RadioButton
                        android:id="@+id/RBCorreoElectronico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Correo Electronico" />

                    <RadioButton
                        android:id="@+id/RBCelular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Celular" />

                    <RadioButton
                        android:id="@+id/RDWhatsApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WhatsApp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <RadioButton
                android:id="@+id/RDConsentimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Otorgo expresamente mi consentimiento para que mis
                              datos personales sean tratados de acuerdo con la política de tratamiento de datos" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSolicitarInformacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:background="@drawable/degradado"
            android:layout_gravity="center">
        </Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>