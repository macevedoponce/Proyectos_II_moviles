<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.sedes.carreras.rutaExperiencia.experiencia.DetalleExperienciaFragment">

    <!-- Primer CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivContenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background" />


    </androidx.cardview.widget.CardView>

    <!-- Segundo CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Fab Lab"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="24sp"
                    android:textColor="@color/icon_selected"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/custom_favorite_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:src="@drawable/custom_favorite_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:justificationMode="inter_word"
                android:fontFamily="@font/poppins_medium"
                android:text="Fomentar la creatividad y la innovación para desarrollar proyectos con impacto social, es fundamental en la formación de los estudiantes universitarios. Por esta razón, la Universidad Continental ha implementado un Fab Lab en el interior del país, bajo el modelo del Massachusetts Institute of Technology (MIT). De esta manera, se convirtirtió en la primera universidad en descentralizar la fabricación digital en el Perú."
                />

            <TextView
                android:id="@+id/tvVermas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="start"
                android:textColor="@color/icon_selected"
                android:justificationMode="inter_word"
                android:fontFamily="@font/poppins_medium"
                android:text="Ver más"
                />

        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <!-- CardView en la esquina superior derecha -->





    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTopRight"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="9dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/degradado"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIcono"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_message"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>

    <!-- CardView en la mitad del CardView 1 y 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMiddle"
        android:layout_width="171dp"
        android:layout_height="42dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="@+id/cardView1"
        app:layout_constraintTop_toBottomOf="@+id/cardView1">

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/CustomRatingBar"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"
            android:rating="1"
            android:stepSize="1" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>