<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:id="@+id/edtSolassdInfoNombres"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="56dp"
            android:padding="16dp"
            android:hint="@string/hint_ingresar_carrera_pref"
            android:layout_margin="24dp"
            android:elevation="4dp"
            android:textSize="14dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/borde_buscar_carrera">
            <EditText
                android:id="@+id/edtBuscarCarreraNombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3"
                android:hint="@string/hint_ingresar_carrera_pref"
                android:layout_marginTop="-10dp"
                android:textSize="14dp"
                android:fontFamily="@font/poppins"
                android:background="@drawable/borde_buscar_carrera" />
            <Button
                android:id="@+id/btnBuscarCarrera"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="-4dp"
                android:background="@drawable/ic_buscar"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCarrerasall"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>